@model GolfBets.Models.GameModel
@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
<h2>Games</h2>
<p>Select the following game you would like to calculate results for the current scorecard</p>
    
<div class="form-horizontal container">
    <div class="row">
        <div class="form-group">
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.gameSelection, new List<SelectListItem> {
                new SelectListItem { Value = "skins" , Text = "Skins" },
                new SelectListItem { Value = "roundRobin" , Text = "Round Robin" },
                new SelectListItem { Value = "nassau" , Text = "Nasau" }
            }, "Select Game", new { id = "selectGame", @class = "btn btn-primary dropdown-toggle form-control" })
            </div>
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.numberOfHoles, new List<SelectListItem> {
                new SelectListItem { Value = "9" , Text = "9" },
                new SelectListItem { Value = "18" , Text = "18" }
            }, "Number of Holes", new { id = "selectHoles", @class = "btn btn-primary dropdown-toggle form-control" })
            </div>
            <div class="col-md-2">
                @Html.DropDownListFor(m => m.numberOfPlayers, new List<SelectListItem> {
                new SelectListItem { Value = "2" , Text = "2 Players" },
                new SelectListItem { Value = "3" , Text = "3 Players" },
                new SelectListItem { Value = "4" , Text = "4 Players" }
            }, "Number of Players", new { id = "selectPlayers", @class = "btn btn-primary dropdown-toggle form-control" })
            </div>
        </div>
    </div>
</div>
<br />
<div id="playerWager">
    <label id="wagerLabel">Wager per player:</label>
    <div>
        $ @Html.TextBoxFor(m => m.wagerAmount)
    </div>

</div>
<br/>
<h2>Scorecard</h2>
<div class="container" id="front9">
    <h4>FRONT 9</h4>
    <table class="table table-bordered" id="scoreCard">
        <thead>
            <tr bgcolor="#4c91cd">
                <th class="col-md-3">Hole</th>
                @for (int i = 1; i < 10; i++)
                {
                <th id="holeNumberRowCell">@i</th>
            }

            </tr>
            <tr bgcolor="#74a9d8">
                <th>Par</th>
                @for (int i = 0; i < 9; i++)
                {
                <th id="parRowCell">@Html.TextBoxFor(m => m.parValues[i],new { @class = "parInput"})</th>
                }
            </tr>
        </thead>
        <tbody>
            <tr class="player1">
                <th>@Html.TextBoxFor(m => m.players[0].playerName, new { id="player1NameInput", @class = "playerNameInput" })</th>
                
                @for (int i = 0; i < 9; i++)
                {
                    <th id="strokeRowCell">
                        <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                        @Html.TextBoxFor(m => m.players[0].strokePerHole[i], new { @class = "scoreInput" })
                        @Html.TextBoxFor(m => m.players[0].puttsPerHole[i], new { @class = "puttInput" })
                    </th>
                }
            </tr>
            <tr bgcolor="#f2f2f2" class="player2">
                <th>@Html.TextBoxFor(m => m.players[1].playerName, new { id = "player2NameInput", @class = "playerNameInput" })</th>
                @for (int i = 0; i < 9; i++)
                {
                    <th id="strokeRowCell">
                        <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                        @Html.TextBoxFor(m => m.players[1].strokePerHole[i], new { @class = "scoreInput" })
                        @Html.TextBoxFor(m => m.players[1].puttsPerHole[i], new { @class = "puttInput" })
                    </th>
                }
            </tr>
            <tr class="player3">
                <th>@Html.TextBoxFor(m => m.players[2].playerName, new { id = "player3NameInput", @class = "playerNameInput" })</th>
                @for (int i = 0; i < 9; i++)
                {
                    <th id="strokeRowCell">
                        <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                        @Html.TextBoxFor(m => m.players[2].strokePerHole[i], new { @class = "scoreInput" })
                        @Html.TextBoxFor(m => m.players[2].puttsPerHole[i], new { @class = "puttInput" })
                    </th>
                }
            </tr>
            <tr bgcolor="#f2f2f2" class="player4">
                <th>@Html.TextBoxFor(m => m.players[3].playerName, new { id = "player4NameInput", @class = "playerNameInput" })</th>
                @for (int i = 0; i < 9; i++)
                {
                    <th id="strokeRowCell">
                        <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                        @Html.TextBoxFor(m => m.players[3].strokePerHole[i], new { @class = "scoreInput" })
                        @Html.TextBoxFor(m => m.players[3].puttsPerHole[i], new { @class = "puttInput" })
                    </th>
                }
            </tr>

        </tbody>
    </table>
</div>
<br/>

<div class="container" id="back9">
        <h4>BACK 9</h4>
        <table class="table table-bordered">
            <thead>
                <tr bgcolor="#4c91cd">
                    <th class="col-md-3">Hole</th>
                    @for (int i = 10; i < 19; i++)
                    {
                        <th class="text-center">@i</th>
                    }
                </tr>
                <tr bgcolor="#74a9d8">
                    <th>Par</th>
                    @for (int i = 9; i < 18; i++)
                    {
                        <th id="parRowCell">@Html.TextBoxFor(m => m.parValues[i], new { @class = "parInput" })</th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr class="player1">
                    <th>
                        <div class="playerLabel" id="player1Label">Enter Player Name Above</div>
                    </th>
                    @for (int i = 9; i < 18; i++)
                    {
                        <th id="strokeRowCell">
                            <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                            @Html.TextBoxFor(m => m.players[0].strokePerHole[i], new { @class = "scoreInput" })
                            @Html.TextBoxFor(m => m.players[0].puttsPerHole[i], new { @class = "puttInput" })
                        </th>
                    }
                </tr>
                <tr bgcolor="#f2f2f2" class="player2">
                    <th>
                        <div class="playerLabel" id="player2Label">Enter Player Name Above</div>
                    </th>
                    @for (int i = 9; i < 18; i++)
                    {
                        <th id="strokeRowCell">
                            <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                            @Html.TextBoxFor(m => m.players[1].strokePerHole[i], new { @class = "scoreInput" })
                            @Html.TextBoxFor(m => m.players[1].puttsPerHole[i], new { @class = "puttInput" })
                        </th>
                    }
                </tr>
                <tr class="player3">
                    <th> 
                        <div class ="playerLabel" id="player3Label">Enter Player Name Above</div>
                    </th>
                    @for (int i = 9; i < 18; i++)
                    {
                        <th id="strokeRowCell">
                            <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                            @Html.TextBoxFor(m => m.players[2].strokePerHole[i], new { @class = "scoreInput" })
                            @Html.TextBoxFor(m => m.players[2].puttsPerHole[i], new { @class = "puttInput" })
                        </th>
                    }
                </tr>
                <tr bgcolor="#f2f2f2" class="player4">
                    <th>
                        <div class="playerLabel" id="player4Label">Enter Player Name Above</div>
                    </th>
                    @for (int i = 9; i < 18; i++)
                    {
                        <th id="strokeRowCell">
                            <div class="strokeLabel">Strokes</div><div class="puttLabel">Putts</div>
                            @Html.TextBoxFor(m => m.players[3].strokePerHole[i], new { @class = "scoreInput" })
                            @Html.TextBoxFor(m => m.players[3].puttsPerHole[i], new { @class = "puttInput" })
                        </th>
                    }
                </tr>
            </tbody>
        </table>
    </div>
    <br/><br/>
    <button asp-controller="Home" asp-action="Index" type="submit" class="btn btn-primary">Generate Scores</button>

}
